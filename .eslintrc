{
  "extends": "airbnb/legacy",
  "env": {
    "mocha": true,
    "node": true
  },
  "rules": {
    "no-unused-expressions": 0,
    "no-param-reassign": 0,
    "no-empty": 0,
    "no-shadow": 0,
    "id-length": 0,
    "valid-jsdoc": 2,
    "func-names": 0,
    "no-console": 0,

    "space-before-function-paren": 0,
    "no-use-before-define": [2, "nofunc"],

    // Disable until Flow supports let and const
    "no-var": 0,
    "vars-on-top": 0,

    // Disable comma-dangle unless need to support it
    "comma-dangle": 0
  }
}
